


<div class="position-absolute w-100 h-100 d-flex flex-column align-items-center justify-content-center">
    <div class="spinner-border" role="status" style="color: @Color; animation-duration: 1.5s;"></div>
</div>

@code {
    [Parameter] public string? Color { get; set; } = null;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Color = Color ?? "white";
    }
}
